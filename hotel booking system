	import java.util.Scanner;

public class HotelBookingSystem {


	    
	    static Scanner sc = new Scanner(System.in);
	    
	    public static void main(String[] args) {
	        System.out.println("Welcome to Motel Booking System!");
	        User user = getUserDetails();
	        Room room = selectRoom();
	        Payment payment = processPayment(room);
	        confirmBooking(user, room, payment);
	    }

	    // 1. User Details
	    private static User getUserDetails() {
	        System.out.println("Please enter your name:");
	        String name = sc.nextLine();
	        System.out.println("Enter your contact number:");
	        String contact = sc.nextLine();
	        System.out.println("Enter your email address:");
	        String email = sc.nextLine();
	        
	        return new User(name, contact, email);
	    }

	    // 2. Room Selection
	    private static Room selectRoom() {
	        System.out.println("\nSelect a room type:");
	        System.out.println("1. Single Room - 1000/- per night");
	        System.out.println("2. Double Room - 1500/- per night");
	        System.out.println("3. Suite - 2500/- per night");
	        System.out.print("Enter your choice (1-3): ");
	        int choice = sc.nextInt();
	        sc.nextLine(); // consume newline

	        Room room = null;
	        switch (choice) {
	            case 1: room = new Room("Single", 1000); break;
	            case 2: room = new Room("Double", 1500); break;
	            case 3: room = new Room("Suite", 2500); break;
	            default: System.out.println("Invalid choice, booking Single Room."); 
	                     room = new Room("Single", 1000);
	        }

	        System.out.print("Enter the number of nights: ");
	        int nights = sc.nextInt();
	        sc.nextLine(); // consume newline
	        room.setNights(nights);
	        return room;
	    }
	    // 3. Payment Processing
	    private static Payment processPayment(Room room) {
	        double totalAmount = room.getPrice() * room.getNights();
	        System.out.println("\nYour total amount is: Rupees" + totalAmount);
	        System.out.println("Choose payment method:");
	        System.out.println("1. Credit Card");
	        System.out.println("2. Debit Card");
	        System.out.println("3. Online Transaction");
	        System.out.print("Enter your choice (1-3): ");
	        int paymentChoice = sc.nextInt();
	        sc.nextLine(); // consume newline

	        String paymentMethod = "";
	        switch (paymentChoice) {
	            case 1: paymentMethod = "Credit Card"; break;
	            case 2: paymentMethod = "Debit Card"; break;
	            case 3: paymentMethod = "Online Transaction"; break;
	            default: System.out.println("Invalid choice, defaulting to Credit Card."); 
	                     paymentMethod = "Credit Card";
	        }
	        return new Payment(paymentMethod, totalAmount);
	    }
	    // 4. Booking Confirmation
	    private static void confirmBooking(User user, Room room, Payment payment) {
	        System.out.println("\nBooking Confirmed!");
	        System.out.println("Booking Details:");
	        System.out.println("Name: " + user.getName());
	        System.out.println("Contact: " + user.getContact());
	        System.out.println("Email: " + user.getEmail());
	        System.out.println("Room: " + room.getType());
	        System.out.println("Nights: " + room.getNights());
	        System.out.println("Total Amount: Rupee " + payment.getAmount());
	        System.out.println("Payment Method: " + payment.getMethod());
	        System.out.println("Thank you for booking with us!");
	    }
	}

	// User Class
	class User {
	    private String name;
	    private String contact;
	    private String email;

	    public User(String name, String contact, String email) {
	        this.name = name;
	        this.contact = contact;
	        this.email = email;
	    }
	    public String getName() { return name; }
	    public String getContact() { return contact; }
	    public String getEmail() { return email; }
	}
	// Room Class
	class Room {
	    private String type;
	    private double price;
	    private int nights;
	    public Room(String type, double price) {
	        this.type = type;
	        this.price = price;
	    }
	    public String getType() { return type; }
	    public double getPrice() { return price; }
	    public int getNights() { return nights; }

	    public void setNights(int nights) {
	        this.nights = nights;
	    }
	}
	// Payment Class
	class Payment {
	    private String method;
	    private double amount;
	    public Payment(String method, double amount) {
	        this.method = method;
	        this.amount = amount;
	    }
	    public String getMethod() { return method; }
	    public double getAmount() { return amount; }
	}
